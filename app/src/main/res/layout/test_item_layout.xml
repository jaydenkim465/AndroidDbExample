<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:weightSum="5"
	android:gravity="center_vertical">

	<TextView
		android:id="@+id/db_index"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:breakStrategy="simple"
		tools:text="test_db_id"/>

	<TextView
		android:id="@+id/item_id"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:breakStrategy="simple"
		tools:text="test_item_id"/>

	<TextView
		android:id="@+id/item_cd"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:breakStrategy="simple"
		android:gravity="center"
		tools:text="test_item_cd"/>

	<TextView
		android:id="@+id/item_value"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:breakStrategy="simple"
		tools:text="test_item_value"/>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_weight="1">
		<TextView
			android:id="@+id/reg_date"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:breakStrategy="simple"
			tools:text="2024-01-01 00:00:00"/>

		<TextView
			android:id="@+id/upd_date"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:breakStrategy="simple"
			tools:text="2024-01-01 00:00:00"/>
	</LinearLayout>

</LinearLayout>